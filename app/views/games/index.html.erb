                      <td class="col-sm-2"><%=rating_for game, 'rating', star: 5, disable_after_rate: false, enable_half: true, cancel_place: 'right', star_path: '/images' %></td>
                    </tr>

                <%end%>

            <%end%>

          <%end%>
        </tbody>
      </table>
    <!-- </div> --> <!-- end table repsonsive -->
  </div>

