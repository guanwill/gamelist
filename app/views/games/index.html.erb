                      <td class="col-sm-1.5"><%=game.genre%></td>
                      <td class="col-sm-1.5"><%=game.platform%></td>
                      <td class="col-sm-1.5"><%=game.progress%></td>
                      <td class="col-sm-1.5"><%=game.release_date%></td>
